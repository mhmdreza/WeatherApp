<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textview_wind_speed"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:id="@+id/imageview_wind"
        android:background="@drawable/ic_ic_wind_speed_d"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textview_humidity"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/textview_wind_speed"
        android:layout_marginTop="18dp"
        android:layout_alignParentStart="true" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageview_humidity"
        android:layout_marginTop="8dp"
        android:background="@drawable/ic_humidity_d"
        android:layout_below="@id/imageview_wind"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:id="@+id/imageview_max"
        android:background="@drawable/ic_arrow_up"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:textSize="24sp"
        android:id="@+id/textview_max"
        android:layout_toRightOf="@id/imageview_max"
        android:layout_toEndOf="@id/imageview_max" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/imageview_min"
        android:layout_toRightOf="@id/textview_max"
        android:background="@drawable/ic_arrow_down"
        android:layout_toEndOf="@id/textview_max" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:textSize="24sp"
        android:id="@+id/textview_min"
        android:layout_toRightOf="@id/imageview_min"
        android:layout_toEndOf="@id/imageview_min" />

</RelativeLayout>