<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@drawable/d01"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:id="@+id/imageview_weather_state"
        android:layout_alignParentEnd="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/textview_unit"
        android:text="@string/persian_temp_unit"
        android:textSize="14sp"
        android:padding="8dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@id/textview_unit"
        android:id="@+id/textview_current_temp"
        android:textSize="28sp"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@id/textview_unit" />
</RelativeLayout>